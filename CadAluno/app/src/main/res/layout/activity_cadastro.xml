<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Cadastro">

    <TextView android:text="Cadastro de Aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoCadastro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome"
        android:id="@+id/textoNome"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textoNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Idade"
        android:id="@+id/textoIdade"
        android:layout_below="@+id/textoIdade"
        android:layout_alignRight="@+id/textoIdade"
        android:layout_alignEnd="@+id/textoIdade"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Curso"
        android:id="@+id/textoCurso"
        android:layout_below="@+id/textoCurso"
        android:layout_alignLeft="@+id/textoCurso"
        android:layout_alignStart="@+id/textoCurso"
        android:layout_marginTop="108dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/botaoSalvar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
